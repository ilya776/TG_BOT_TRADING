# ===========================================
# WHALE COPY TRADING BOT - Environment Config
# ===========================================
# 1. Copy this file: cp .env.example .env
# 2. Generate secrets using commands below
# 3. Fill in your API keys
# 4. Run: docker-compose up -d
# ===========================================

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=WhaleCopyTrading
APP_ENV=production
DEBUG=false

# Generate: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=

# ===========================================
# DATABASE
# ===========================================
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
DB_PASSWORD=

# ===========================================
# REDIS
# ===========================================
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
REDIS_PASSWORD=

# ===========================================
# ENCRYPTION (for storing API keys securely)
# ===========================================
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# ===========================================
# TELEGRAM BOT
# ===========================================
# Get from @BotFather
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_WEBAPP_URL=https://your-domain.com

# ===========================================
# EXCHANGE API KEYS
# ===========================================
# WARNING: NEVER enable withdrawal permissions!
# WARNING: Always set IP whitelist for your server!

# Binance - https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=false

# OKX - https://www.okx.com/account/my-api
OKX_API_KEY=
OKX_API_SECRET=
OKX_PASSPHRASE=
OKX_TESTNET=false

# Bybit - https://www.bybit.com/app/user/api-management
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_TESTNET=false

# ===========================================
# BLOCKCHAIN RPC
# ===========================================
# Get free API key: https://www.alchemy.com/

ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
ETH_RPC_WS_URL=wss://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

BSC_RPC_URL=https://bsc-dataseed1.binance.org/
BSC_RPC_WS_URL=wss://bsc-ws-node.nariox.org:443

# ===========================================
# MONITORING (Optional)
# ===========================================
# Flower UI credentials
FLOWER_USER=admin
FLOWER_PASSWORD=

# Sentry
SENTRY_DSN=

LOG_LEVEL=INFO

# ===========================================
# SUBSCRIPTION TIERS
# ===========================================
FREE_TIER_COMMISSION=0.02
PRO_TIER_COMMISSION=0.01
ELITE_TIER_COMMISSION=0.005
