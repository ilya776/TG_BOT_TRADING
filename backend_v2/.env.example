# ============================================================================
# Copy Trading Backend v2 - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================================================

# ==================== Core Settings ====================
# Environment: development | staging | production
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# ==================== Database ====================
# PostgreSQL connection URL (asyncpg driver for async)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/trading

# Connection pool settings (production recommendations)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_ECHO=false

# ==================== Redis ====================
REDIS_URL=redis://localhost:6379/0

# ==================== Celery ====================
# Leave empty to use REDIS_URL as default
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_ACKS_LATE=true
CELERY_TASK_REJECT_ON_WORKER_LOST=true

# ==================== Signal Processing ====================
# How often to process signal batches (seconds)
SIGNAL_PROCESSING_INTERVAL=5.0
# Maximum signals per batch
MAX_SIGNALS_PER_BATCH=50
# Cleanup interval (seconds)
SIGNAL_CLEANUP_INTERVAL=300
# Signal expiry (seconds)
SIGNAL_EXPIRY_SECONDS=3600

# ==================== Exchange API ====================
# Retry settings
EXCHANGE_MAX_RETRIES=3
EXCHANGE_RETRY_DELAY=1.0
EXCHANGE_RETRY_BACKOFF=2.0

# Circuit breaker settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Rate limiting (requests per second)
EXCHANGE_RATE_LIMIT=10

# ==================== Trading Limits ====================
MIN_TRADE_SIZE_USDT=10.0
MAX_TRADE_SIZE_USDT=10000.0
DEFAULT_STOP_LOSS_PERCENT=5.0
DEFAULT_TAKE_PROFIT_PERCENT=10.0

# ==================== Logging ====================
# LOG_LEVEL: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO
# LOG_FORMAT: json (production) | console (development)
LOG_FORMAT=console

# ==================== CORS ====================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ==================== JWT Authentication ====================
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ==================== Telegram Authentication ====================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# Set to true to disable desktop/fallback auth (Telegram Mini App only)
DISABLE_DESKTOP_AUTH=false

# ==================== Encryption ====================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-here

# ==================== API Settings ====================
APP_NAME=Copy Trading Backend v2
API_V1_PREFIX=/api/v1

# ==================== Flower (Celery Monitoring) ====================
FLOWER_USER=admin
FLOWER_PASSWORD=your-flower-password

# ==================== Docker/Production Only ====================
# PostgreSQL password (used in docker-compose)
POSTGRES_PASSWORD=your-postgres-password
