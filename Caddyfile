# ===========================================
# Caddy Configuration for snippetly.codes
# Automatic HTTPS with Let's Encrypt
# ===========================================

snippetly.codes {
    # Enable compression
    encode gzip

    # Telegram webhook endpoint
    handle /webhook* {
        reverse_proxy backend:8000
    }

    # Desktop auth fallback
    handle /api/v1/auth/telegram/desktop {
        reverse_proxy backend:8000
    }

    # API endpoints
    handle /api/* {
        reverse_proxy backend:8000
    }

    # WebSocket endpoint (long connections)
    handle /ws/* {
        reverse_proxy backend:8000 {
            transport http {
                keepalive 120s
                keepalive_idle_conns 10
            }
        }
    }

    # Health check
    handle /health {
        reverse_proxy backend:8000
    }

    # Frontend (Mini App)
    handle {
        reverse_proxy frontend:80
    }

    # Security headers
    header {
        # Note: X-Frame-Options removed to allow Telegram Mini App iframe embedding
        # Using Content-Security-Policy frame-ancestors instead (modern replacement)
        -X-Frame-Options
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        # Allow Telegram to embed this site in iframe
        Content-Security-Policy "frame-ancestors 'self' https://web.telegram.org https://*.telegram.org"
    }

    # Logging with rotation (100MB max, keep 5 files)
    log {
        output file /var/log/caddy/access.log {
            roll_size 100MiB
            roll_keep 5
            roll_keep_for 720h
        }
        format json
    }
}

# WWW redirect
www.snippetly.codes {
    redir https://snippetly.codes{uri} permanent
}
